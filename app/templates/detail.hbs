<div class="detail-container">
	<div class="row">
	  <div class="col-xs-12 col-sm-4 image-col center-col-contents">
	  	<img src="http://www2.montgomerycountymd.gov/dlcsearch/{{unbound imgsrc}}" alt="some_text"></img>
	  </div>
	  <div class="col-xs-12 col-sm-8">
	  	<div class="row">
	  		<div class="col-xs-6 col-sm-4 row-desc">Description</div>
			<div class="col-xs-6 col-sm-8">{{description}}</div>
		</div>
		<div class="row">
			<div class="col-xs-6 col-sm-4 row-desc">Price</div>
			<div class="col-xs-6 col-sm-8">{{format-dollar price}}</div>
		</div>
		{{#if cursaleprice}}
			<div class="row">
				<div class="col-xs-6 col-sm-4 row-desc">Sale Price</div>
				<div class="col-xs-6 col-sm-8">{{format-dollar cursaleprice}}</div>
			</div>
			<div class="row">
				<div class="col-xs-6 col-sm-4 row-desc">Sale End Date</div>
				<div class="col-xs-6 col-sm-8">{{format-normalized-date cursaleenddate}}</div>
			</div>
			<div class="row">
				<div class="col-xs-6 col-sm-4 row-desc">Discount</div>
				<div class="col-xs-6 col-sm-8">{{format-discount discount}}</div>
			</div>
		{{/if}}
	  </div>
	</div>
	<div class="row">
		{{view App.PriceTrendView contentBinding="content"}}
	</div>
	<div class="row graph-key">
		<div class="row">
			<div class="col-xs-1  col-xs-offset-1"><div class="saleprice-circle-key"></div></div>
			<div class="col-xs-10">Sale Price Trend</div>
		</div>
		<div class="row">
			<div class="col-xs-1 col-xs-offset-1"><div class="normalprice-circle-key"></div></div>
			<div class="col-xs-10">Normal Price Trend</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">{{view App.InventoryMapView contentBinding="content"}}</div>
	</div>
</div>